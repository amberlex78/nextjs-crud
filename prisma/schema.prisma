generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Job {
  id           Int      @id @default(autoincrement())
  title        String
  slug         String   @unique
  description  String
  is_published Boolean  @default(false)
  salary_from  Int
  salary_to    Int
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  expired_at   DateTime?
  deleted_at   DateTime?
}
